{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "shell: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-std=c++17",
                "-pthread",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
